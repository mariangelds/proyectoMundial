<h2>¿Olvidaste tu contraseña?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => 'form-horizontal'}), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label:'Correo Electrónico', required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar nueva contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
