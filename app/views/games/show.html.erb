<%- model_class = Game -%>
<div class="page-header">
  <h1>Juego</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @game.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stage_id) %>:</strong></dt>
  <dd><%= @game.stage_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stadium_id) %>:</strong></dt>
  <dd><%= @game.stadium_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
