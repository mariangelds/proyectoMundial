<%- model_class = News -%>
<div class="page-header">
  <h1>Noticia</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @news.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @news.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @news.contenido %></dd>
  <dd><%= image_tag @news.foto %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              news_index_path, :class => 'btn'  %>
  <%if user_signed_in?%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_news_path(@news), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              news_path(@news),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%end%>
</div>
