<%- model_class = Result -%>
<div class="page-header">
  <h1>Resultado</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:golesGanados) %>:</strong></dt>
  <dd><%= @result.golesGanados %></dd>
  <dt><strong><%= model_class.human_attribute_name(:golesPerdidos) %>:</strong></dt>
  <dd><%= @result.golesPerdidos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:empate) %>:</strong></dt>
  <dd><%= @result.empate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desenlace) %>:</strong></dt>
  <dd><%= @result.desenlace %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              results_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(@result), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
