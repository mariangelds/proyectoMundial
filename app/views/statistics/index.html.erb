<h1>Listing statistics</h1>

<table>
  <thead>
    <tr>
      <th>Juegos</th>
      <th>Ganados</th>
      <th>Perdidos</th>
      <th>Empatados</th>
      <th>Goles</th>
      <th>Puntaje</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.juegos %></td>
        <td><%= statistic.ganados %></td>
        <td><%= statistic.perdidos %></td>
        <td><%= statistic.empatados %></td>
        <td><%= statistic.goles %></td>
        <td><%= statistic.puntaje %></td>
        <td><%= link_to 'Show', statistic %></td>
        <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
        <td><%= link_to 'Destroy', statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

