<%- model_class = Statistic -%>
<div class="page-header">
  <h1>Estadisticas</h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_statistic_path,
            :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Equipo</th>
      <th><%= model_class.human_attribute_name(:puntaje) %></th>
      <th><%= model_class.human_attribute_name(:juegos) %></th>
      <th><%= model_class.human_attribute_name(:ganados) %></th>
      <th><%= model_class.human_attribute_name(:perdidos) %></th>
      <th><%= model_class.human_attribute_name(:empatados) %></th>
      <th><%= model_class.human_attribute_name(:goles) %></th>
      <th><%=t 'Opciones', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @statistics.each do |statistic| %>
    <%e = Team.find(statistic.team_id)%>
      <tr>
        <td><%=image_tag e.bandera%>&nbsp;<%= e.nombre %></td>
        <td><%= statistic.puntaje %></td>
        <td><%= statistic.juegos %></td>
        <td><%= statistic.ganados %></td>
        <td><%= statistic.perdidos %></td>
        <td><%= statistic.empatados %></td>
        <td><%= statistic.goles %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_statistic_path(statistic), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      statistic_path(statistic),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
